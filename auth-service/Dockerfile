FROM golang:1.24-alpine

WORKDIR /app

# 1. Сначала копируем только файлы зависимостей
COPY go.mod go.sum ./
# 2. Скачиваем их (этот слой закэшируется и не будет скачиваться заново)
RUN go mod download

# 3. Только потом копируем код
COPY . .

# 4. Собираем (флаг -v покажет, какие пакеты компилируются сейчас)
RUN go build -v -o main .

CMD ["./main"]